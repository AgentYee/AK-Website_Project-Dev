@model AK_Website_Project.Models.ViewModels.User.UserRegisterViewModel

@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center container">
    <script type="text/javascript">
        var signUp = $("#signUpLink");
        if (signUp != null) {
            signUp.hide();
        }
    </script>
    @using (Html.BeginForm("SignUp", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card text-center img-rounded" style="margin-right:25%; margin-left:25%; background-color:white; padding:1%;">
                <div class="card-body">
                    <h4 class="card-title">Sign up for an account</h4>
                    <p class="card-text">Fill out this form</p>
                    <div class="form-group row col-xs-12">
                        @Html.LabelFor(model => model.Username, new { @class = "control-label col-xs-2" })
                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control col-xs-10" })
                    </div>
                    <div class="form-group row col-xs-12">
                        @Html.LabelFor(model => model.Password, new { @class = "control-label col-xs-2" })
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control col-xs-10" })
                    </div>
                    <div class="form-group row col-xs-12">
                        @Html.LabelFor(model => model.ConfirmPassword, "Confirm Password", new { @class = "control-label col-xs-2" })
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control col-xs-10" })
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <button type="submit" class="btn btn-success">Create account</button>
                </div>
            </div>
        </div>
    }
</div>
