@model AK_Website_Project.Models.ViewModels.User.UserLoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <script type="text/javascript">
        var loginLink = $("#loginLink");
        if (loginLink != null) {
            loginLink.hide();
        }
    </script>
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card text-center img-rounded" style="margin-right:25%; margin-left:25%; background-color:white; padding:1%;">
            <div class="card-body">
                <h4 class="card-title">Login into your account</h4>
                <p class="card-text">Fill out this form</p>
                <div class="col-xs-12">
                    @Html.LabelFor(model => model.Username, new { htmlAttributes = new { @class = "control-label col-xs-4" } })
                    <input type="text" name="username" id="inputUsername" class="form-control col-xs-6" />
                </div>
                <div class="col-xs-12">
                    @Html.LabelFor(model => model.Password, new { htmlAttributes = new { @class = "control-label col-xs-4" } })
                    <input type="password" name="password" id="inputPassword" class="form-control col-xs-6" />
                </div>
                <button type="submit" value="Login" class="btn btn-success">Login</button>
            </div>
        </div>
    }
</div>



